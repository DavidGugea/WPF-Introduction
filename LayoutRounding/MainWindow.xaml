<Window x:Class="LayoutRounding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutRounding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid UseLayoutRounding="True" Background="Yellow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <Rectangle Stroke="Blue" StrokeThickness="11" Fill="Aqua" Width="50.5"/>
        <Rectangle Stroke="Blue" StrokeThickness="11" Fill="Aqua" Grid.Column="1"/>
        <Rectangle Stroke="Blue" StrokeThickness="11" Fill="Aqua" Grid.Column="2"/>
    </Grid>
</Window>
