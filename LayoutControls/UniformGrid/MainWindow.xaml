<Window x:Class="UniformGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniformGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid Name="uniformGrid1" Columns="2" Rows="3" Grid.Row="1" Height="200" Width="400">
            <Button>Text</Button>
            <CheckBox Height="16" Name="checkBox1" Width="120">CheckBox</CheckBox>
            <Label Height="23" Name="label1" Width="120">Label</Label>
            <Rectangle Name="rectangle1" Stroke="Black" Width="50" Height="50"/>
            <TextBox Height="21" Name="textBox1"/>
            <Button>Button</Button>
        </UniformGrid>
    </Grid>
</Window>
